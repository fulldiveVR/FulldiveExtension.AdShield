<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="main_primary"
        app:title="@string/account_section_header_primary">

        <Preference
            android:fragment="ui.settings.SettingsAppFragment"
            android:icon="@drawable/ic_settings"
            app:key="main_app"
            app:title="@string/app_settings_section_header" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="main_other"
        app:title="@string/universal_action_support">

        <Preference
            android:fragment="ui.web.WebFragment"
            android:icon="@drawable/ic_baseline_help_outline_24"
            app:key="main_kb"
            app:title="@string/homepage_action_faq" />

        <Preference
            android:fragment="ui.settings.SettingsFragment"
            android:icon="@drawable/ic_email_us"
            app:key="email_us"
            app:title="@string/settings_action_email" />

        <Preference
            android:fragment="ui.web.WebFragment"
            android:icon="@drawable/ic_discord"
            app:key="join_discord"
            app:title="@string/settings_action_discord" />

        <Preference
            android:fragment="ui.web.WebFragment"
            android:icon="@drawable/ic_support_and_earn"
            app:key="support_earn"
            app:title="@string/setting_ido_announcement" />

    </PreferenceCategory>
</PreferenceScreen>