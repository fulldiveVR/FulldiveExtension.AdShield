<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/backgroundTabsAndNavBars"
    app:cardCornerRadius="@dimen/size_8dp"
    app:cardElevation="@dimen/size_2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_16dp"
        tools:background="@color/colorPrimary">

        <TextView
            android:id="@+id/experienceTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/size_12dp"
            android:drawablePadding="@dimen/size_8dp"
            android:fontFamily="@font/roboto_medium"
            android:textAlignment="textStart"
            android:textSize="@dimen/text_size_normal"
            app:drawableStartCompat="@drawable/ic_xp_20dp"
            app:layout_constraintBottom_toTopOf="@+id/experienceProgressViewLayout"
            app:layout_constraintEnd_toStartOf="@+id/exchangeButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="300" />

        <TextView
            android:id="@+id/exchangeButton"
            style="@style/FlatTheme.SmallButtonWithBorder"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_30dp"
            android:layout_marginBottom="@dimen/size_12dp"
            android:text="@string/exchange_button_title"
            android:textAlignment="center"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/experienceProgressViewLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <ui.rewards.board.ExperienceProgressViewLayout
            android:id="@+id/experienceProgressViewLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_8dp"
            app:layout_constraintBottom_toTopOf="@+id/experienceProgressTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:progressViewHeight="@dimen/size_16dp" />

        <TextView
            android:id="@+id/experienceProgressTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="@dimen/text_size_xsmall"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/experienceProgressViewLayout"
            tools:text="XP 300/450" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>