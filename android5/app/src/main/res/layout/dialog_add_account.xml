<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/idoAnnouncementCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp"
        app:cardBackgroundColor="@color/backgroundTabsAndNavBars"
        app:cardCornerRadius="@dimen/size_8dp"
        app:cardElevation="@dimen/size_4dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_16dp">

            <TextView
                android:id="@+id/titleTextView"
                style="@style/Text.H3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="@dimen/size_4dp"
                android:text="@string/str_your_wallet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hintTextView"
                style="@style/Text.H4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="@dimen/size_4dp"
                android:text="@string/str_your_wallet_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleTextView" />

            <Button
                android:id="@+id/createButton"
                style="@style/AccentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16dp"
                android:minHeight="@dimen/size_40dp"
                android:paddingStart="@dimen/size_36dp"
                android:paddingEnd="@dimen/size_36dp"
                android:text="@string/str_create_account"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintBottom_toTopOf="@id/restoreWithMnemonic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hintTextView" />


            <Button
                android:id="@+id/restoreWithMnemonic"
                style="@style/AccentTextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8dp"
                android:minHeight="@dimen/size_45dp"
                android:text="@string/str_restore_mnemonic"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintBottom_toTopOf="@id/restoreWithPrivateKey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createButton" />

            <Button
                android:id="@+id/restoreWithPrivateKey"
                style="@style/AccentTextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/size_45dp"
                android:text="@string/str_restore_private_key"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/restoreWithMnemonic" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>