<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/descriptionTextView"
        style="@style/Text.H4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_16dp"
        android:ellipsize="end"
        android:padding="@dimen/size_4dp"
        android:text="@string/str_exchange_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userExperienceTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_24dp"
        android:background="@drawable/background_rounded_border_normal"
        android:drawableEnd="@drawable/ic_xp_20dp"
        android:drawablePadding="@dimen/size_8dp"
        android:fontFamily="@font/roboto_medium"
        android:padding="@dimen/size_8dp"
        android:textColor="@color/textColorPrimary"
        android:textColorHint="@color/textColorSecondary"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintEnd_toStartOf="@+id/exchangeValuesView"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView" />

    <ImageView
        android:id="@+id/exchangeValuesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_16dp"
        android:src="@drawable/ic_exchange_values"
        app:layout_constraintBottom_toBottomOf="@+id/coinsTextView"
        app:layout_constraintEnd_toStartOf="@+id/coinsTextView"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/userExperienceTextView"
        app:layout_constraintTop_toTopOf="@+id/coinsTextView" />

    <TextView
        android:id="@+id/coinsTextView"
        style="@style/Text.H3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:background="@drawable/background_rounded_border_normal"
        android:drawableEnd="@drawable/ic_fd_token"
        android:drawablePadding="@dimen/size_8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="@dimen/size_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/exchangeValuesView"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView" />

    <Button
        android:id="@+id/exchangeButton"
        style="@style/AccentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24dp"
        android:layout_marginBottom="@dimen/size_24dp"
        android:minHeight="@dimen/size_40dp"
        android:paddingStart="@dimen/size_36dp"
        android:paddingEnd="@dimen/size_36dp"
        android:text="@string/str_exchange_title"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coinsTextView"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>