<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/descriptionTextView"
        style="@style/Text.H4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_16dp"
        android:ellipsize="end"
        android:padding="@dimen/size_4dp"
        android:text="@string/str_exchange_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fromTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16dp"
        android:ellipsize="end"
        android:text="@string/str_from"
        android:textColor="@color/textColorTertiary"
        android:textSize="@dimen/text_size_xxsmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/descriptionTextView"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/enterExperienceTextLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_4dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:background="@drawable/background_rounded_border_normal"
        android:paddingStart="@dimen/size_16dp"
        android:paddingTop="@dimen/size_8dp"
        android:paddingEnd="@dimen/size_16dp"
        android:paddingBottom="@dimen/size_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fromTextView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/enterExperienceTextEditText"
            style="@style/HintOutlinedTextInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:fontFamily="@font/roboto_medium"
            android:gravity="top"
            android:hint="1000"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorSecondary"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintEnd_toStartOf="@+id/experienceImageView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/experienceImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_xp_20dp"
            app:layout_constraintBottom_toBottomOf="@+id/enterExperienceTextEditText"
            app:layout_constraintEnd_toEndOf="@+id/enterExperienceTextLayout"
            app:layout_constraintTop_toTopOf="@+id/enterExperienceTextEditText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/toTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16dp"
        android:ellipsize="end"
        android:text="@string/str_to"
        android:textColor="@color/textColorTertiary"
        android:textSize="@dimen/text_size_xxsmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/enterExperienceTextLayout"
        app:layout_constraintTop_toBottomOf="@+id/enterExperienceTextLayout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/coinsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_4dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:background="@drawable/background_rounded_border_normal"
        android:paddingStart="@dimen/size_16dp"
        android:paddingTop="@dimen/size_8dp"
        android:paddingEnd="@dimen/size_16dp"
        android:paddingBottom="@dimen/size_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toTextView">

        <TextView
            android:id="@+id/coinsTextView"
            style="@style/Text.H3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@+id/coinImageView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/coinImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fd_token"
            app:layout_constraintBottom_toBottomOf="@+id/coinsTextView"
            app:layout_constraintEnd_toEndOf="@+id/coinsLayout"
            app:layout_constraintTop_toTopOf="@+id/coinsTextView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/exchangeButton"
        style="@style/AccentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24dp"
        android:minHeight="@dimen/size_40dp"
        android:paddingStart="@dimen/size_36dp"
        android:paddingEnd="@dimen/size_36dp"
        android:text="@string/str_exchange_title"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coinsLayout"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>