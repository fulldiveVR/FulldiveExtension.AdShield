<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/adblockStatusLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <ui.home.ActivateView
            android:id="@+id/activateButton"
            android:layout_width="@dimen/powerview"
            android:layout_height="@dimen/powerview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12dp"
            android:background="@drawable/background_button_connected"
            android:paddingStart="@dimen/size_24dp"
            android:paddingTop="@dimen/size_8dp"
            android:paddingEnd="@dimen/size_24dp"
            android:paddingBottom="@dimen/size_8dp"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activateButton"
            tools:text="Connected" />

        <TextView
            android:id="@+id/legalStateDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_32dp"
            android:layout_marginTop="@dimen/size_24dp"
            android:layout_marginEnd="@dimen/size_32dp"
            android:paddingStart="@dimen/size_24dp"
            android:paddingEnd="@dimen/size_24dp"
            android:text="@string/home_legal_state_explanation"
            android:textAlignment="center"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_size_xsmall"
            app:layout_constraintBottom_toTopOf="@+id/statusDescriptionCardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statusTextView" />

        <androidx.cardview.widget.CardView
            android:id="@+id/statusDescriptionCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12dp"
            android:layout_marginTop="@dimen/size_24dp"
            android:layout_marginEnd="@dimen/size_12dp"
            android:layout_marginBottom="@dimen/size_8dp"
            app:cardBackgroundColor="@color/backgroundTabsAndNavBars"
            app:cardCornerRadius="@dimen/size_8dp"
            app:cardElevation="@dimen/size_4dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/legalStateDescriptionTextView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/size_16dp"
                android:paddingTop="@dimen/size_16dp"
                android:paddingEnd="@dimen/size_12dp"
                android:paddingBottom="@dimen/size_16dp">

                <TextView
                    android:id="@+id/statusDescriptionTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/home_action_tap_to_activate"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorIconPrimary"
                    app:layout_constraintEnd_toStartOf="@+id/arrowImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/arrowImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/size_8dp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/colorIconPrimary" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <include
            android:id="@+id/limitedOfferLayout"
            layout="@layout/layout_limited_offer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12dp"
            android:layout_marginEnd="@dimen/size_12dp"
            android:layout_marginBottom="@dimen/size_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statusDescriptionCardView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>