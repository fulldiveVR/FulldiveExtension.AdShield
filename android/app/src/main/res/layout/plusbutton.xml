<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/normal" />

    <Button
        android:id="@+id/home_plusbuttonbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/normal"
        android:layout_marginTop="@dimen/half"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="@dimen/half"
        android:elevation="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_plustext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/universal_action_upgrade"
            android:textColor="@color/white" />

        <Switch
            android:id="@+id/home_switch"
            android:layout_width="56dp"
            android:layout_height="32dp"
            android:background="@drawable/rounded_background"
            android:paddingEnd="4dp" />

    </LinearLayout>
</FrameLayout>